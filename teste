#include <stdio.h>

int main()
{
   float a, b, c, media;
   printf("nota1: ");
   scanf("%f", &a);
   printf("nota2: ");
   scanf("%f", &b);
   printf("nota3: ");
   scanf("%f", &c);
   media = (a+b+c)/3.0f;
   if (media >= 7) {
       printf("aprovado\n nota: %.2f", media);
   }
    else if(media >= 4 && media < 7) {
        printf("recuperação\n nota: %.2f", media);
    }
    else{
        printf("reprovado\n nota: %.2f", media);
    }

 

    return 0;
}
